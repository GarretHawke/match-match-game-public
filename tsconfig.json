{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "@/*": [
        "./script/*"
      ]
    },
    "outDir": "./build/",
    "rootDir": "./",
    "module": "CommonJS",
    "target": "ES6",
    "strictNullChecks": false,
  },
  "include": ["src", "declarations.d.ts"]
}
